<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mv.example.todo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>myTodoApp</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.3" />
    <preference name="SplashScreenDelay" value="4000" />
    <splash density="land-hdpi" src="res/screen/android/screen-land-hdpi.png" />
    <splash density="land-ldpi" src="res/screen/android/screen-land-ldpi.png" />
    <splash density="land-mdpi" src="res/screen/android/screen-land-mdpi.png" />
    <splash density="land-xhdpi" src="res/screen/android/screen-land-xhdpi.png" />
    <splash density="hdpi" src="res/screen/android/screen-hdpi.png" />
    <splash density="ldpi" src="res/screen/android/screen-ldpi.png" />
    <splash density="mdpi" src="res/screen/android/screen-mdpi.png" />
    <splash density="xhdpi" src="res/screen/android/screen-xhdpi.png" />
    <platform name="android">
        <icon density="mdpi" src="res/icon/android/TODO-mdpi.png" />
        <icon density="ldpi" src="res/icon/android/TODO-ldpi.png" />
        <icon density="hdpi" src="res/icon/android/TODO-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/TODO-xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/TODO-xxhdpi.png" />
    </platform>
    <engine name="android" spec="^7.1.4" />
</widget>
